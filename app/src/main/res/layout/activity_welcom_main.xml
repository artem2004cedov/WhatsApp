<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="Добро пожаловать в WhatsApp"
        android:textColor="@color/main_color"
        android:textSize="24dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/cartinca"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_centerInParent="true"
        android:background="@drawable/wa_1" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cartinca"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:text="Ознакомтесь с нашей" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv"
        android:layout_marginStart="6dp"
        android:layout_toRightOf="@+id/tv"
        android:text="Политикой Конфидециальности."
        android:textColor="#3F51B5" />

    <Button
        android:id="@+id/agree_bt"
        android:onClick="onClickStart"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="44dp"
        android:text="Принять и продолжить "
        android:textSize="14dp" />
</RelativeLayout>