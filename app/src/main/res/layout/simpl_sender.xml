<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:padding="4dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_pravo"
        android:maxWidth="310dp"
        android:maxHeight="400dp"
        android:minWidth="100dp"
        android:minHeight="35dp">


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="26dp" />

        <TextView
            android:id="@+id/text_sender_massege"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:maxWidth="270dp"
            android:textSize="13dp"
            android:textColor="#191919"
            android:layout_marginEnd="4dp"
            android:minWidth="50dp"
            android:paddingStart="6dp"
            android:text="TeводвыжлвыоралвыраловыадалвыдалдвыалдвыжалвыджалвыджарлвыарвыоxtVi"

            app:layout_constraintBottom_toTopOf="@+id/text_sender_tame"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/text_sender_tame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="12.00"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"/>
<!--            app:layout_constraintTop_toBottomOf="@+id/textView" />-->

    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>